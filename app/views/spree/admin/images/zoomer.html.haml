= render :partial => 'spree/admin/shared/product_sub_menu'
= render :partial => 'spree/admin/shared/product_tabs', :locals => { :current => 'Images' }
= render :partial => 'spree/shared/error_messages', :locals => { :target => @image }
= form_for [:admin, @product, @image], :html => { :multipart => true } do |f|
  %table.basic-table{"data-hook" => "edit_image"}
    %tr{"data-hook" => "thumbnail"}
      %td
        = t(:thumbnail)
        \:
      %td= link_to image_tag(@image.attachment.url(:mini)), @image.attachment.url(:product)
    = render :partial => 'form', :locals => { :f => f }
  %p.form-buttons{"data-hook" => "buttons"}
    = button t(:update)
    = t(:or)
    = link_to t(:cancel), admin_product_images_url(@product), :id => 'cancel_link'